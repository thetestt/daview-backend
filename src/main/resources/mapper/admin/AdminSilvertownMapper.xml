<mapper namespace="com.daview.mapper.admin_mapper.AdminSilvertownMapper">

    <!-- 실버타운 등록 -->
    <insert id="insertSilvertown" parameterType="com.daview.dto.SilvertownDTO">
        INSERT INTO silvertown (name, location, price, description)
        VALUES (#{name}, #{location}, #{price}, #{description})
    </insert>

    <!-- 실버타운 목록 조회 -->
    <select id="getAllSilvertowns" resultType="com.daview.dto.SilvertownDTO">
        SELECT * FROM silvertown
    </select>

    <!-- 실버타운 수정 -->
    <update id="updateSilvertown" parameterType="com.daview.dto.SilvertownDTO">
        UPDATE silvertown
        SET name = #{name},
            location = #{location},
            price = #{price},
            description = #{description}
        WHERE id = #{id}
    </update>

    <!-- 실버타운 삭제 -->
    <delete id="deleteSilvertown" parameterType="java.lang.Long">
        DELETE FROM silvertown WHERE id = #{id}
    </delete>

    <!-- 실버타운 상세 조회 -->
    <select id="getSilvertownById" parameterType="java.lang.Long" resultType="com.daview.dto.SilvertownDTO">
        SELECT * FROM silvertown WHERE id = #{id}
    </select>

</mapper>
